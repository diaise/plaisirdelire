{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="pop">
    <h1>Categorie disponible sur notre site</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de a catégorie</th>
                
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.name }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">consulter la liste des articles</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>  
{% endblock %}

